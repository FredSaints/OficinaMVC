@inject OficinaMVC.Helpers.IUserHelper UserHelper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-g" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FredAuto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OficinaMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OficinaMVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">

                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <!-- Admin-only Dropdown -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Register"><i class="bi bi-person-plus me-1"></i> Add User</a></li>
                                    <li><a class="dropdown-item" asp-controller="RepairType" asp-action="Index"><i class="bi bi-list-ul me-1"></i> Repair Types</a></li>
                                    <li><a class="dropdown-item" asp-controller="Mechanics" asp-action="Index"><i class="bi bi-person-badge me-1"></i> Mechanics</a></li>
                                    <li><a class="dropdown-item" asp-controller="Specialty" asp-action="Index"><i class="bi bi-tools me-1"></i> Specialties</a></li>
                                </ul>
                            </li>
                        }

                        <!-- Workshop Dropdown (for Staff) -->
                        @if (User.IsInRole("Receptionist") || User.IsInRole("Mechanic"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="workshopDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Workshop
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="workshopDropdown">
                                    <li><a class="dropdown-item" asp-controller="Vehicle" asp-action="Index"><i class="bi bi-car-front-fill me-1"></i> Vehicles</a></li>
                                    <li><a class="dropdown-item" asp-controller="Appointment" asp-action="Index"><i class="bi bi-calendar-check me-1"></i> Appointments</a></li>
                                    <li><a class="dropdown-item" asp-controller="Repairs" asp-action="Index"><i class="bi bi-wrench-adjustable-circle-fill me-1"></i> Repairs</a></li>
                                    <li><a class="dropdown-item" asp-controller="Parts" asp-action="Index"><i class="bi bi-tools me-1"></i> Manage Parts</a></li>
                                    <li><a class="dropdown-item" asp-controller="Communication" asp-action="Index"><i class="bi bi-broadcast me-1"></i> Communication</a></li>
                                </ul>
                            </li>
                        }

                        <!-- Client-only Menu -->
                        @if (User.IsInRole("Client"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Vehicle" asp-action="Index">
                                    <i class="bi bi-car-front me-1"></i> My Vehicles
                                </a>
                            </li>
                        }
                    </ul>

                    @{
                        string profileUrl = "/images/default-profile.png";
                        string displayName = "User";

                        if (User.Identity.IsAuthenticated)
                        {
                            var user = await UserHelper.GetUserByEmailAsync(User.Identity.Name);
                            if (user != null)
                            {
                                profileUrl = string.IsNullOrEmpty(user.ProfileImageUrl) ? profileUrl : user.ProfileImageUrl;
                                displayName = user.FullName;
                            }
                        }
                    }
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="@Url.Content(profileUrl)" alt="Profile" class="rounded-circle border me-2" style="width:40px; height:40px; object-fit:cover;">
                                    @displayName
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangeUser"><i class="bi bi-person-gear me-2"></i>Edit Profile</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword"><i class="bi bi-shield-lock me-2"></i>Change Password</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted mt-4 py-3">
        <div class="container-fluid">
            © @DateTime.Now.Year - OficinaMVC - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>