@model OficinaMVC.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<h2>Change Password</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="OldPassword" class="form-label"></label>
                <input asp-for="OldPassword" type="password" class="form-control" autocomplete="off" />
                <span asp-validation-for="OldPassword" class="text-warning"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label"></label>
                <input asp-for="NewPassword" type="password" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="NewPassword" class="text-warning"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Confirm" class="form-label"></label>
                <input asp-for="Confirm" type="password" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="Confirm" class="text-warning"></span>
            </div>

            <div class="mb-3 d-flex">
                <button type="submit" class="btn btn-primary me-2">Change password</button>
                <a asp-action="ChangeUser" class="btn btn-success">Back to user</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}