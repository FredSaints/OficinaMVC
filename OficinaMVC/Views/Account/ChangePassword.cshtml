@model OficinaMVC.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">

        <div class="text-center">
            <h2 class="mt-4 mb-1">@ViewData["Title"]</h2>
            <p class="text-muted">Choose a strong, new password to protect your account.</p>
        </div>

        <div class="card shadow-sm mt-4">
            <div class="card-body p-4 p-md-5">
                <form method="post" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="OldPassword" class="form-label"></label>
                        <input asp-for="OldPassword" type="password" class="form-control form-control-lg" autocomplete="current-password" />
                        <span asp-validation-for="OldPassword" class="text-danger small"></span>
                    </div>

                    <hr class="my-4" />

                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label"></label>
                        <input asp-for="NewPassword" type="password" class="form-control form-control-lg" autocomplete="new-password" />
                        <span asp-validation-for="NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Confirm" class="form-label"></label>
                        <input asp-for="Confirm" type="password" class="form-control form-control-lg" autocomplete="new-password" />
                        <span asp-validation-for="Confirm" class="text-danger small"></span>
                    </div>


                    <div class="d-flex justify-content-end align-items-center mt-4 gap-2">
                        <a asp-action="ChangeUser" class="btn btn-secondary btn-lg"><i class="bi bi-arrow-left-circle me-1"></i>Back to Profile</a>
                        <button type="submit" class="btn btn-primary btn-lg"><i class="bi bi-key-fill me-1"></i>Set New Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}