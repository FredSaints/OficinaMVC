@model OficinaMVC.Models.RecoverPasswordViewModel
@{
    ViewData["Title"] = "Recover Password";
}

<h2>Recover Password</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

            <div class="mb-3 d-flex">
                <button type="submit" class="btn btn-primary me-2">Recover password</button>
                <a asp-action="Login" class="btn btn-success">Back to login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}